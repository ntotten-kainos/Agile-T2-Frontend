{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ],
    "typeRoots": [
        "./src/models", // This is where we define our types.
        "./node_modules/@types" // This is where node modules containing types are located.
    ]
}